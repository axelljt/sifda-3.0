{% extends 'MinsalsifdaBundle::layoutResponsable.html.twig' %}

{% block contenido_in -%}
    <div class="page-header">
        <center><h3>Listado de tipos de servicio</h3></center>
    </div>
    <div class="row-fluid">
        <div class="span12">
            
            <table id="tabla" class="table table-bordered table-hover table-condensed" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Correlativo</th>
                <th><center>Nombre</center></th>
                <th><center>Descripcion</center></th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% set corr = 1 %}    
        {% for entity in entities %}
            
            {% if entity.idDependenciaEstablecimiento == usuario.idDependenciaEstablecimiento %}
            <tr>
                <td><center>{{ corr }}</center></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sifda_rutaciclovida_new', { 'id': entity.id }) }}">Registrar etapas</a>
                    </li>
                    <li>
                        <a href="{{ path('sifdatiposervicio_show', { 'id': entity.id }) }}">Mostrar detalle</a>
                    </li>
                    <li>
                        <a href="{{ path('sifdatiposervicio_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>                    
                </ul>
                </td>
            </tr>
            {% set corr = corr + 1 %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div> 
{% endblock %}