function drawTable(data) {
var rows = '';
    for (var i = 0; i < data.length; i++) {
        rows+=drawRow(data[i],i+1);
    }
    document.getElementById('tabla').innerHTML = rows;
    
}

function drawRow(rowData,id) {
    var row = '<tr>';
