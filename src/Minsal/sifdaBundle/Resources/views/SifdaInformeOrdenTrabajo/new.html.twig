{% extends 'MinsalsifdaBundle::layoutTecnico.html.twig' %}

{% block contenido_in -%}
{{form_start(form)}}
{{form_errors(form)}}
<div class="row-fluid">
    <div class="page-header">
        <center><h3>Registrar un informe a la orden de trabajo</h3></center>
    </div>
    <table id="tabla" class="table table-bordered table-hover table-condensed">
        <tbody>
            <tr>
                <th>C&oacute;digo</th>
                <td>{{ orden.codigo }}</td>
            </tr>
            <br>
            <tr>
                <th>Descripci&oacute;n</th>
                <td>{{ orden.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha de finalizaci&oacute;n</th>
                <td>{{ orden.fechaFinalizacion|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Prioridad</th>
                <td>{{ orden.idPrioridad }}</td>
            </tr>
            <tr>
                <th>Observaci&oacute;n</th>
                <td>{% if orden.observacion %}{{ orden.observacion }}{%else%}No tiene{%endif %}</td>
            </tr>
            
        </tbody>
    </table>
            <br>
    <div class="span12">
        <div class="row-fluid">
            <div class="span4 offset1">
                {{form_row(form.detalle, {'attr': {'class':'span12'} })}}
                 {{form_row(form.terminado, {'attr': {'class':'radio'} })}}         
            </div>          
            <div class="span4 offset1 btn-small">
                {{form_row(form.fechaRealizacion,{'attr': {'readonly':'yes'} })}}
                
            </div>
        </div>
        <br>
        <center>
            <table id="botones">
            <tr>
                <td>{{form_row(form.submit,{'attr':{'class':'btn'}})}}</td> 
                <td><a href="{{ path('sifda_ordentrabajo')}}" class="btn">Regresar</a></td>
            </tr>    
            </table>
        </center>    
    </div>
    <br>    
</div>
{{form_end(form)}}                 
{% endblock %}

