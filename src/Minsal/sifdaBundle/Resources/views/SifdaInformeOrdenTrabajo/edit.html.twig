{% extends 'MinsalsifdaBundle::layoutTecnico.html.twig' %}

{% block contenido_in -%}
  {{form_start(edit_form)}}
    {{form_errors(edit_form)}}
    <div class="row-fluid">
        <center><h3>Editar informe de orden de trabajo</h3></center>
        <div class="span12">
            <div class="row-fluid">
            <div class="span4 offset1">
                {{form_row(edit_form.detalle, {'attr': {'class':'span12'} })}}
                 {{form_row(edit_form.terminado, {'attr': {'class':'radio'} })}}         
            </div>          
            <div class="span4 offset1">
                {{form_row(edit_form.fechaRealizacion,{'attr': {'readonly':'yes'} })}}
                
            </div>
        </div>         
          
            
        <center>
            
            <table id="botones">
                <tr>
                    <td>{{form_row(edit_form.submit,{'attr':{'class':'btn'}})}}</td>
                    {#<td>{{form_row(delete_form.submit,{'attr':{'class':'btn'}})}}</td>#}
                    <td><a href="{{ path('sifdainformeordentrabajo', { 'idOrd': entity.idOrdenTrabajo.id }) }}" class="btn">Regresar</a></td>
                </tr>  
            </table>            
        </center>
            
      </div> 
   </div>                    
                    
  {{form_end(edit_form)}}  
{% endblock %}
