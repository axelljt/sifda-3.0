{% extends 'MinsalsifdaBundle::layoutTecnico.html.twig' %}

{% block contenido_in -%}
{{form_start(form)}}
{{form_errors(form)}}
 <div class="row-fluid">
    <center><h3>Agregar Recurso a Informe de Trabajo</h3></center>
    <table id="tabla" class="table table-bordered table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ informe.id }}</td>
            </tr>
            <tr>
                <th>Detalle</th>
                <td>{{ informe.detalle }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="span12">
        <div class="row-fluid">
            <div class="span4 offset2">
                 {{form_row(form.cantidad)}}
                 {{form_row(form.costoTotal)}}
            </div>          
            <div class="span5 offset1">
                 {{form_row(form.idInformeOrdenTrabajo)}}         
                 {{form_row(form.idTipoRecursoDependencia)}} 
            </div>
        </div>
        <center>
            <table id="botones">
            <tr>
            <td>{{form_row(form.submit,{'attr':{'class':'btn'}})}}</td> 
                <td><a href="{{ path('sifdainformeordentrabajo', { 'idOrd': informe.idOrdenTrabajo.id }) }}" class="btn">Regresar</a></td>
            </tr>    
            </table>
        </center>    
    </div>
    
           
    
</div>   

{{form_end(form)}}            
    

{% endblock %}
