{% extends 'MinsalsifdaBundle::layoutSolicitante.html.twig' %}

{% block alert_step %}
{% if errors is not null %}
    {% include "MinsalsifdaBundle:Errors:errors.html.twig" with {'errors':errors} %}
{% else %}
    <div class="alert alert-info" id="alert_step">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Nota: </strong> Campos requeridos (*).
    </div>    
{% endif %}
{% endblock %}

{% block contenido_in -%}
{{form_start(form)}}
{{form_errors(form)}}
<div class="row-fluid">
    <div class="page-header">
        <center><h3>Registrar una solicitud de servicio</h3></center>
        
{#        {% set anioRequiere = solicitud.fechaRequiere|date('Y') %}  
                {% set mesRequiere = solicitud.fechaRequiere|date('m') %}
                {% set diaRequiere = solicitud.fechaRequiere|date('d') %}#}
    </div>
    <div class="span12">
        <div class="row-fluid">
            <div class="span4 offset2">
                 {{form_row(form.establecimiento, {'attr': {'class':'span10'} })}}
                 {{form_row(form.dependencia, {'attr': {'class':'span10'} })}}
                 {{form_row(form.idTipoServicio, {'attr': {'class':'span10'} })}}
            </div>          
            <div class="span5 offset1">
                 {{form_row(form.descripcion)}}
                 {#{{form_row(form.fechaRequiere, {'attr':{'readonly':'yes','onclick':'buscarFechasFeriado("../ctlferiado/llenarCalendario",' ~  anioRequiere ~ ',' ~  mesRequiere ~ ',' ~  diaRequiere ~ ') ' }} ) }}#}
                 {{form_row(form.fechaRequiere,{'attr': {'readonly':'yes', 'onclick':'buscarFechasFeriado("../ctlferiado/llenarCalendario") '} })}}
            </div>
        </div>
        <br>
        <center>
            <table id="botones">
            <tr> 
                
                <td>{{form_row(form.submit,{'attr':{'class':'btn btn-primary'}})}}</td> 
                <td><a href="{{ path('sifda_solicitudservicio')}}" class="btn">Regresar</a></td>
            </tr>    
            </table>
        </center>    
    </div>
</div>
{{form_end(form)}}       


{% endblock %}

