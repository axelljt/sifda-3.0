                  <table id="combos">
                      <tr>
                          <td>
                              <label>Servicio:</label>
                          </td>
                          <td>
                                <div class="btn-group">
                                    <select id="cmb1" name="ComboEstado"  class="selectpicker" style="width: 200px">
                                     <option value="0">Tipo Servicio</option>
                                     
